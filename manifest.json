{
  "manifest_version": 2,
  "name": "EthicsNet",
  "version": "0.0.3",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/html2canvas.js", "content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "images/16x16.png"
  },
  "web_accessible_resources": ["sidebar/sidebar.html"],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["tabs", "activeTab", "storage", "contextMenus"]
}
