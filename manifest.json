{
  "manifest_version": 2,
  "name": "ethics net",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["sidebar/sidebar.html"],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["tabs", "<all_urls>", "storage", "contextMenus"]
}
